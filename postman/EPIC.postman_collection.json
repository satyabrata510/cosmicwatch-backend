{
  "info": {
    "name": "Cosmic Watch — EPIC",
    "description": "Earth Polychromatic Imaging Camera — full-disc Earth imagery from DSCOVR.\n\n## Base URL\n`http://localhost:4000/api/v1`",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [{ "key": "baseUrl", "value": "http://localhost:4000/api/v1" }],
  "item": [
    {
      "name": "Natural Color Images",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/epic/natural",
          "host": ["{{baseUrl}}"],
          "path": ["epic", "natural"],
          "query": [
            { "key": "date", "value": "2026-01-15", "disabled": true, "description": "Specific date YYYY-MM-DD" }
          ]
        },
        "description": "Get latest natural color Earth images from DSCOVR satellite."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('EPIC natural data structure', function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json.success).to.be.true;",
              "    pm.expect(json.data).to.have.property('totalCount');",
              "    pm.expect(json.data).to.have.property('imageType');",
              "    pm.expect(json.data.imageType).to.equal('natural');",
              "    pm.expect(json.data).to.have.property('images');",
              "    pm.expect(json.data.images).to.be.an('array');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Enhanced Color Images",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/epic/enhanced",
          "host": ["{{baseUrl}}"],
          "path": ["epic", "enhanced"],
          "query": [
            { "key": "date", "value": "2026-01-15", "disabled": true }
          ]
        },
        "description": "Get enhanced color Earth images (color-corrected and contrast-enhanced)."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('EPIC enhanced data structure', function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json.success).to.be.true;",
              "    pm.expect(json.data.imageType).to.equal('enhanced');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Available Dates",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/epic/dates?type=natural",
          "host": ["{{baseUrl}}"],
          "path": ["epic", "dates"],
          "query": [
            { "key": "type", "value": "natural", "description": "natural or enhanced" }
          ]
        },
        "description": "Get list of available dates for EPIC imagery."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Returns array of dates', function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json.success).to.be.true;",
              "    pm.expect(json.data).to.be.an('array');",
              "});"
            ]
          }
        }
      ]
    }
  ]
}
